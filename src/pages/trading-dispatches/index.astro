---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const entries = (await getCollection('trading-dispatches'))
  .filter((e) => !e.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="Trading Dispatches" description="Automated strategy reports and market observations from the ORB trading system.">
  <div class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <a href="/" class="font-mono text-sm text-text-muted hover:text-neon-cyan transition-colors mb-4 inline-block">&larr; home</a>
      <h1 class="font-mono text-3xl font-bold text-text-bright glow-cyan">Trading Dispatches</h1>
      <p class="text-text-muted mt-2">Automated strategy reports and market observations.</p>
    </header>

    {entries.length === 0 ? (
      <div class="bg-surface border border-surface-light rounded-lg p-8 text-center">
        <p class="font-mono text-sm text-text-muted">
          <span class="text-neon-cyan">&#9679;</span> awaiting first transmission...
        </p>
      </div>
    ) : (
      <div class="grid gap-4">
        {entries.map((entry) => (
          <a
            href={`/trading-dispatches/${entry.id}`}
            class="block bg-surface border border-surface-light rounded-lg p-5 card-glow group"
          >
            <div class="flex items-start justify-between gap-4">
              <div class="min-w-0">
                <h2 class="font-mono text-sm font-bold text-text-bright group-hover:text-neon-cyan transition-colors">
                  {entry.data.title}
                </h2>
                <p class="text-sm text-text-muted mt-1">{entry.data.summary}</p>
                {entry.data.market && (
                  <span class="inline-block mt-2 px-2 py-0.5 bg-surface-light rounded text-xs font-mono text-neon-amber">
                    {entry.data.market}
                  </span>
                )}
              </div>
              <time
                datetime={entry.data.date.toISOString()}
                class="font-mono text-xs text-text-muted shrink-0"
              >
                {entry.data.date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' })}
              </time>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
